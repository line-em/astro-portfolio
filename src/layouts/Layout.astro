---
export interface Props {
	title: string;
}
import "@fontsource/fraunces";
import "@fontsource/rubik";
import "@fontsource/rubik/800.css";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body transition-style="in:circle:center" class="finisher-header">
		<slot />
		<script src="finisher-header.es5.min.js" type="text/javascript" is:inline
		></script>
	</body>
</html>

<style is:global>
	:root {
		/*catpuccin*/
		--pure-white: rgb(250, 250, 250);
		--white: rgb(239, 242, 247);
		--white-alpha: rgba(239, 242, 247, 0.4);
		--white-darker: #dce0e8;
		--black: #1e1e2e;
		--black-02: #181825;
		--faded: #4b5184;
		--maroon: hsla(355, 76%, 59%); /*link*/
		--maroon-darken: hsla(355, 76%, 49%); /*link*/
		--primary: hsla(316, 74%, 69%, 1);
		--primary-02: hsla(316, 74%, 69%, 0.5);
		--secondary: hsla(266, 85%, 58%, 1);
		--tertiary: hsla(189, 70%, 42%, 1);
		--accent: hsla(230, 97%, 72%, 1);

		/*shadow josh*/
		--shadow-color: 0deg 0% 73%;
		--shadow-elevation-low: 0.5px 0.9px 1.2px hsl(var(--shadow-color) / 0.18),
			0.7px 1.3px 1.7px -1.2px hsl(var(--shadow-color) / 0.19),
			1.4px 2.7px 3.5px -2.4px hsl(var(--shadow-color) / 0.19);

		--sans: "Rubik", "Helvetica", "Arial", sans-serif;
		--serif: "Fraunces", "Times New Roman", "Georgia", serif;
	}

	* {
		box-sizing: border-box;
	}

	html {
		font: 400 16px/1.4 "Rubik", "Helvetica", "Arial", sans-serif;
		color: var(--black);
		scroll-behavior: smooth;

		background-image: image("./bg.png", var(--white));
		background-image: url("./bg.png");
		background-attachment: scroll;
		background-position: 0;
		background-repeat: repeat-y;
		background-size: 70vh;
		background-color: var(--white);
	}

	::selection {
		background-color: var(--primary);
		color: var(--white);
	}

	body {
		background-image: linear-gradient(to left, var(--white), var(--white-alpha));
		margin: 0;
		display: grid;
		grid-template:
			60px 1fr 60px / minmax(0px, 1fr) minmax(auto, 70ch)
			minmax(0px, 1fr);
		grid-template-areas:
			"nav nav nav"
			". content ."
			"footer footer footer";
	}

	strong {
		font-weight: 800;
	}

	.text-gradient {
		background-image: linear-gradient(to right, var(--primary), var(--tertiary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	@keyframes circle-in-hesitate {
		0% {
			clip-path: circle(0%);
		}
		40% {
			clip-path: circle(40%);
		}
		100% {
			clip-path: circle(125%);
		}
	}

	[transition-style="in:circle:hesitate"] {
		animation: 2.5s cubic-bezier(0.25, 1, 0.3, 1) circle-in-hesitate both;
	}

	@keyframes circle-in-center {
		from {
			clip-path: circle(0%);
		}
		to {
			clip-path: circle(125%);
		}
	}

	[transition-style="in:circle:center"] {
		animation: 2.5s cubic-bezier(0.25, 1, 0.3, 1) circle-in-center both;
	}
</style>
