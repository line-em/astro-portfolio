---
export interface Props {
	title: string;
}
import "@fontsource/fraunces";
import "@fontsource/rubik";
import "@fontsource/rubik/800.css";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/*catpuccin*/
		--pure-white: rgb(250, 250, 250);
		--white: rgb(239, 242, 247);
		--white-02: #dce0e8;
		--black: #1e1e2e;
		--black-02: #181825;
		--faded: #4b5184;
		--maroon: hsla(355, 76%, 59%); /*link*/
		--maroon-darken: hsla(355, 76%, 49%); /*link*/
		--primary: hsla(316, 74%, 69%, 1);
		--primary-02: hsla(316, 74%, 69%, 0.5);
		--secondary: hsla(266, 85%, 58%, 1);
		--tertiary: hsla(189, 70%, 42%, 1);
		--accent: hsla(230, 97%, 72%, 1);

		/*shadow josh*/
		--shadow-color: 0deg 0% 73%;
		--shadow-elevation-low: 0.5px 0.9px 1.2px hsl(var(--shadow-color) / 0.18),
			0.7px 1.3px 1.7px -1.2px hsl(var(--shadow-color) / 0.19),
			1.4px 2.7px 3.5px -2.4px hsl(var(--shadow-color) / 0.19);

		--sans: "Rubik", "Helvetica", "Arial", sans-serif;
		--serif: "Fraunces", "Times New Roman", "Georgia", serif;
	}

	* {
		box-sizing: border-box;
	}

	html {
		font: 400 16px/1.4 "Rubik", "Helvetica", "Arial", sans-serif;
		color: var(--black);
	}

	body {
		background-image: image("./bg.png", var(--white));
		/* background-image: url("./bg.png"); */
		background-attachment: scroll;
		background-position: 0;
		background-repeat: repeat-y;
		background-size: 50vh;
		/* background-color: var(--white); */
		margin: 0;
		display: grid;
		/* grid-template-rows: 60px 1fr;
		grid-template-columns: 1fr minmax(auto, 70ch) 1fr; */
		grid-template: 60px 1fr / repeat(2, minmax(0px, 1fr)) minmax(auto, 70ch) repeat(
				2,
				minmax(0px, 1fr)
			);
		grid-template-areas:
			"nav nav nav nav nav"
			". expanded content expanded ."
			"footer footer footer footer footer";
	}

	strong {
		font-weight: 800;
	}

	.text-gradient {
		background-image: linear-gradient(to right, var(--primary), var(--tertiary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>
